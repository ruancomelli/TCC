{
	// Parâmetros do simulador:
	"initialTime": 0.0,
	"timeStep": 1e-3,
	"finalTime": 3,
	"timeStepsForOutput": 10, // Quantidade de passos de tempo para salvar informação
	"outputsForExporting": 1, // Quantidade de passos salvos para escrever em disco
	"mainOutputFolder": "output", // Diretório principal de exportação
	"particleOutputFolder": "output/particles", // Diretório para exportação de partículas
	"boundaryOutputFolder": "output/boundaries", // Diretório para exportação de elementos de contorno
	"looper": "GearLooper", // Algoritmo de integração das equações
	"seeker": "BlindSeeker", // Algoritmo de monitoramento das vizinhanças

	// Definição das interações
	"interactions": "GravityForce", // A única interação que ocorre é a da gravidade

	"particles": // Definição das partículas
	{
		"SphericalParticle": // Tipo de partículas esféricas
		{
			"Name": "Particle",
			"Color": "Red",
			
			"TaylorOrder": 3, // Ordem de extrapolação

			"Mass": 1,
			"Radius": 0.03,
			"MomentOfInertia": 3.6e-4,

			"Position": [0.0, 0.0, 0.0],
			"Velocity": [20.0, 10.0, 0.0],
			"Acceleration": [0.0, 0.0, 0.0]
		}
	},

	"boundaries": // Definição de outras entidades
	{
		"GravityField": // Campo gravitacional
		{
			"Name": "Gravity",
			"Gravity": [0.0, -9.81, 0.0]
		}
	}
}